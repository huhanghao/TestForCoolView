<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">


    <com.reemii.com.testforcoolview.View.CuteBomb
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_centerInParent="true"
        app:bomb_line_color="@color/royalblue"
        app:bomb_body_color="@color/lightskyblue"
        app:bomb_radius="70dp"
        />


    <com.reemii.com.testforcoolview.View.SimoLikeView
        android:id="@+id/simon_like_view"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:simo_color_like="@color/gold"
        app:simo_like_text="喜欢"
        app:simo_data_text="80%"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tv_jump1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="跳转到测绘界面"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/yellow"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
